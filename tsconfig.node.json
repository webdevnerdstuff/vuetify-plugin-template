{
	"extends": "@tsconfig/node22/tsconfig.json",
	"exclude": [
		"cypress.config.*"
	],
	"include": [
		"vite.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*"
	],
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"composite": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"skipLibCheck": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"types": [
			"node"
		]
	}
}
